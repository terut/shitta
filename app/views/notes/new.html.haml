- content_for :sidebar do
  %div
    %h3 Help
    = link_to "Qiita Markdown?", "http://qiita.com/items/c686397e4a0f4f11683d", target: '_blank'
%h1 Post
- if @note.errors.any?
  .errors-message
    %ul
    - @note.errors.full_messages.each do |message|
      %li= message
= form_for @note do |f|
  = f.text_field :title, class: 'input-block-level', placeholder: 'Title'
  = f.text_field :tag_list, class: 'input-block-level'
  = f.text_area :raw_body, class: 'input-block-level', placeholder: 'Note'
  %div
    = f.submit 'Post', class: 'btn btn-large btn-primary'
    = link_to 'Cancel', root_path, class: 'btn btn-large'
