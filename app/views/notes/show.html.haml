- content_for :highlight do
  = stylesheet_link_tag "syntax", :media => "all"
- content_for :sidebar do
  %div
  - if current_user.owner?(@note)
    = link_to 'Edit', edit_note_path(@note), class: 'btn btn-block btn-primary btn-large btn-large-font'
    - if current_user.connected?
      -# TODO decorator
      = link_to 'Share Qiita', share_note_path(@note), class: 'btn btn-block btn-large btn-large-font', method: :post, data: { confirm: "Share this note with Qiita?" }
    - else
      = link_to 'Connect Qiita', services_path, class: 'btn btn-block btn-large btn-large-font'
  %div
    %h3 Help
    = link_to 'Qiita Markdown?', "http://qiita.com/items/c686397e4a0f4f11683d", target: '_blank'
.note
  %h1.shadow-line= @note.title
  ~ markdown @note.raw_body
.comments
  %h3.shadow-line Comments
  %ul.unstyled
    - @note.comments.each do |comment|
      %li.comment
        %div
          = link_to image_tag(comment.user.image_url, class: 'user-img-s'), user_path(comment.user.username)
          = link_to comment.user.name, user_path(comment.user.username)
          - if current_user.owner?(comment)
            = link_to 'Edit', edit_comment_path(comment), class: "comment-options"
        %div.comment-body~ markdown comment.raw_body
  .div
    = form_for :comment, url: note_comments_path(@note) do |f|
      = f.text_area :raw_body, class: 'input-block-level', placeholder: 'Comment', rows: "3"
      %div
        = f.submit 'Post', class: 'btn btn-large btn-primary'
