!!!5
%html
  %head
    %title Shitta
    = stylesheet_link_tag "application", :media => "all"
    = yield :highlight
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Shitta', root_path, title: 'Shitta', class: 'brand'
          .nav-collapse.collapse
            %ul.nav
              %li.active=link_to 'Home', root_path
              %li=link_to 'About', root_path
              %li=link_to 'Contact', root_path
          .navbar-text.pull-right
            - if signin?
              = link_to image_tag(current_user.avatar_url, class: 'user-img-s'), user_path(current_user.username)
              .dropdown
                = link_to current_user.username, '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'
                %ul.dropdown-menu.pull-right{ role: 'menu', 'aria-labelledby' => 'dLabel' }
                  %li= link_to 'Account', account_path, tabindex: '-1'
                  %li= link_to 'Profile', user_path(current_user.username), tabindex: '-1'
                  %li= link_to 'Signout', signout_path, tabindex: '-1'
            - else
              = link_to 'Signin', signin_path, class: 'navbar-link'
    #container.container-fluid
      = content_for?(:content) ? yield(:content) : yield
