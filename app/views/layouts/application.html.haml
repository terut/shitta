!!!5
%html
  %head
    %title Shitta
    = stylesheet_link_tag "application", :media => "all"
    = yield :highlight
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Shitta', root_path, title: 'Shitta', class: 'brand'
          .nav-collapse.collapse
            %ul.nav
              %li.active=link_to 'Home', root_path
              %li=link_to 'About', root_path
              %li=link_to 'Contact', root_path
          %p.navbar-text.pull-right
            - if signin?
              = link_to image_tag(current_user.image_url, class: 'user-minimg'), '#'
              = link_to current_user.username, services_path, class: 'navbar-link'
            - else
              = link_to 'Signin', signin_path, class: 'navbar-link'
    #container.container-fluid
      = content_for?(:content) ? yield(:content) : yield
